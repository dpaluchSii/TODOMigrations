@model IEnumerable<TODOMigrations.Models.Task>

@{
    ViewBag.Title = "To Do Application";
}
<br />
<p>
    @Html.ActionLink("Add New Task", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Event)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Where)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.When)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Event)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Where)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.When)
        </td>
        <td>
            @Html.ActionLink("Edit Task", "Edit", new { id=item.TaskID }) |
           
            @Html.ActionLink("Delete Task", "Delete", new { id=item.TaskID })
        </td>
    </tr>
}

</table>
